from reportlab.pdfgen import canvas  
from reportlab.lib.pagesizes import letter  
from reportlab.lib.colors import LinearGradient, RadialGradient, Color, darkblue, gold, white  
from reportlab.lib.styles import getSampleStyleSheet  
from reportlab.platypus import Paragraph  
 
# Create canvas  
pdf = canvas.Canvas("certificate.pdf", pagesize=letter)  
width, height = letter  # Get page dimensions (612, 792 points; 1 inch = 72 points)  
 
# ----------------------  
# 1. Gradient Background  
# ----------------------  
bg_gradient = LinearGradient(  
    x1=0, y1=0, x2=width, y2=height,  # Cover entire page  
    stops=[(0, Color(0.9, 0.95, 1)), (1, Color(0.7, 0.85, 1))]  # Light blue â†’ lighter blue  
)  
pdf.setFillColor(bg_gradient)  
pdf.rect(0, 0, width, height, fill=1, stroke=0)  # Full-page rectangle  
 
# ----------------------  
# 2. Title Text Box (Gradient Fill)  
# ----------------------  
title_gradient = LinearGradient(  
    x1=0, y1=0, x2=400, y2=0,  # Horizontal gradient  
    stops=[(0, darkblue), (1, gold)]  
)  
pdf.setFillColor(title_gradient)  
pdf.rect(100, height - 200, 400, 80, fill=1, stroke=1, strokeWidth=2)  # Title box  
 
# Add title text  
pdf.setFont("Helvetica-Bold", 36)  
pdf.setFillColor(white)  # White text on gradient background  
pdf.drawCentredString(width/2, height - 160, "CERTIFICATE OF ACHIEVEMENT")  
 
# ----------------------  
# 3. Radial Gradient Seal  
# ----------------------  
seal_gradient = RadialGradient(  
    cx=50, cy=50, r=50,  
    stops=[(0, gold), (1, darkblue)]  
)  
pdf.setFillColor(seal_gradient)  
pdf.ellipse(width - 200, 200, 100, 100, fill=1, stroke=1)  # Circular seal  
 
# Save PDF  
pdf.save()  
